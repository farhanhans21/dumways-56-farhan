<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="../style/style.css" />
    <title>Update Project</title>

  </head>
  <body>

    <div class="container-lg" id="con-project">
      <form
        class="card"
        id="projectForm"
        action="/project-update/{{data.id}}"
        method="post"
      >
        <div class="card-body" id="card-body">
          <h1>UPDATE MY PROJECT</h1>
          <div id="detail" class="form-floating mb-3">
            <div class="inputBox">
              <label for="nama">Project Name : </label>
              <input
                class="form-control"
                type="text"
                placeholder=""
                id="Project"
                name="name"
                value="{{data.name}}"
                aria-label="default input example"
              />
            </div>

            <div class="formDate">
              <div class="inputBox">
                <label for="start">Start Date</label>
                <input
                  class="form-control"
                  type="date"
                  placeholder="Default input"
                  aria-label="default input example"
                  id="start"
                  value="{{data.start_date}}"
                  name="start_date"
                />
              </div>

              <div class="inputBox">
                <label for="end">End Date</label>
                <input
                  class="form-control"
                  type="date"
                  placeholder="Default input"
                  value="{{data.end_date}}"
                  aria-label="default input example"
                  id="end"
                  name="end_date"
                />
              </div>
            </div>

            <div class="inputBox">
              <label for="nodejs">Technologies</label>
              <div class="formCheck">
                <div class="inputCheck">

                  {{#if data.is_node}}
                    <input
                      type="checkbox"
                      name="tech"
                      id="nodejs"
                      value="node"
                      checked
                    />
                  {{else}}
                    <input
                      type="checkbox"
                      name="tech"
                      id="nodejs"
                      value="node"
                    />
                  {{/if}}
                  <label for="nodejs">Node JS</label>

                  {{#if data.is_react}}
                    <input
                      type="checkbox"
                      name="tech"
                      id="reactjs"
                      value="react"
                      checked
                    />
                  {{else}}
                    <input
                      type="checkbox"
                      name="tech"
                      id="reactjs"
                      value="react"
                    />
                  {{/if}}
                  <label for="reactjs">React JS</label>
                </div>

                <div class="inputCheck">
                  {{#if data.is_next}}
                    <input
                      type="checkbox"
                      name="tech"
                      id="nextjs"
                      value="next"
                      checked
                    />
                  {{else}}
                    <input
                      type="checkbox"
                      name="tech"
                      id="nextjs"
                      value="next"
                    />
                  {{/if}}
                  <label for="nextjs">Next JS</label>

                  {{#if data.is_ts}}
                    <input
                      type="checkbox"
                      name="tech"
                      id="typescript"
                      value="ts"
                      checked
                    />
                  {{else}}
                    <input type="checkbox" name="tech" id="ts" value="ts" />
                  {{/if}}
                  <label for="typescript">TypeScript</label>
                </div>
              </div>
            </div>

            <div class="inputBox">
              <label for="image">Image</label>
              <input
                type="file"
                id="imageUpload"
                name="image"
                accept="image/*"
              />
            </div>

            <div class="inputBox">
              <label for="deskripsi">Description</label>
              <div class="form-floating">
                <textarea
                  class="form-control"
                  name="textarea"
                  placeholder="Leave a comment here"
                  id="deskripsi"
                  style="height: 200px"
                  value="{{data.textarea}}"
                >{{data.textarea}}</textarea>
                <label for="floatingTextarea2">Comments</label>
              </div>
            </div>

            <div
              class="d-grid gap-2 d-md-flex justify-content-md-between"
              id="btn-save"
            >
              <button
                class="btn btn-light"
                id="save"
                href="/project"
                type="submit"
              >Save</button>

              <a
                href="/project"
                style="width: 100px;"
                class="btn btn-danger"
              >cencel</a>
            </div>
          </div>
        </div>
      </form>
    </div>
    <script
      src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js"
      integrity="sha384-IQsoLXl5PILFhosVNubq5LC7Qb9DXgDA9i+tQ8Zj3iwWAwPtgFTxbJ8NT4GN1R8p"
      crossorigin="anonymous"
    ></script>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.min.js"
      integrity="sha384-cVKIPhGWiC2Al4u+LWgxfKTRIcfu0JTxR+EQDz/bgldoEyl4H0zUF0QKbrJ0EcQF"
      crossorigin="anonymous"
    ></script>
    <script
      src="https://kit.fontawesome.com/e595e5b227.js"
      crossorigin="anonymous"
    ></script>
  </body>
</html>