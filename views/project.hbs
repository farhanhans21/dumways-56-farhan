    <div class="container-lg" id="con-project">
      <form class="card" id="projectForm" action="/project" method="post">
        <div class="card-body" id="card-body">
          <h1>ADD MY PROJECT</h1>
          <div id="detail" class="form-floating mb-3">
            <div class="inputBox">
              <label for="nama">Project Name : </label>
              <input
                class="form-control"
                type="text"
                placeholder="Please enter your project name!"
                id="Project"
                name="name"
                aria-label="default input example"
              />
            </div>

            <div class="formDate">
              <div class="inputBox">
                <label for="start">Start Date</label>
                <input
                  class="form-control"
                  type="date"
                  placeholder="Default input"
                  aria-label="default input example"
                  id="start"
                  name="start_date"
                />
              </div>

              <div class="inputBox">
                <label for="end">End Date</label>
                <input
                  class="form-control"
                  type="date"
                  placeholder="Default input"
                  aria-label="default input example"
                  id="end"
                  name="end_date"
                />
              </div>
            </div>

            <div class="inputBox">
              <label for="nodejs">Technologies</label>
              <div class="formCheck">
                <div class="inputCheck">

                  <input type="checkbox" name="tech" id="nodejs" value="node" />
                  <label for="nodejs">Node JS</label>

                  <input
                    type="checkbox"
                    name="tech"
                    id="reactjs"
                    value="react"
                  />
                  <label for="reactjs">React JS</label>
                </div>
                <div class="inputCheck">
                  <input type="checkbox" name="tech" id="nextjs" value="next" />
                  <label for="nextjs">Next JS</label>

                  <input
                    type="checkbox"
                    name="tech"
                    id="typescript"
                    value="ts"
                  />
                  <label for="typescript">TypeScript</label>
                </div>
              </div>
            </div>

            <div class="inputBox">
              <label for="image">Image</label>
              <input
                type="file"
                id="imageUpload"
                name="image"
                accept="image/*"
              />
            </div>

            <div class="inputBox">
              <label for="deskripsi">Description</label>
              <div class="form-floating">
                <textarea
                  class="form-control"
                  name="textarea"
                  placeholder="Leave a comment here"
                  id="deskripsi"
                  style="height: 200px"
                ></textarea>
                <label for="floatingTextarea2">Comments</label>
              </div>
            </div>

            <div
              class="d-grid gap-2 d-md-flex justify-content-md-start"
              id="btn-save"
            >
              <button
                class="btn btn-light"
                id="save"
                type="submit"
              >Save</button>
            </div>
          </div>
        </div>
      </form>
    </div>

    <div class="project-container">
      <h1 class="title">My Projects</h1>
      <div class="projects" id="projects" style="">
        <!-- Project items rendered by javascript. -->
        {{#each data}}
          <div class="card" style="width: 18rem; height:100%">
            <img src={{this.image}} class="card-img-top" alt="..." />
            <div class="card-body">
              <h5 class="card-title">{{this.name}}</h5>
              <p class="card-text">{{this.start_date}}</p>
              <p class="card-text">{{this.end_date}}</p>
              <p class="card-text">{{this.createAt}}</p>
              <p class="card-text">{{this.tech}}</p>
              <p class="card-text">{{this.textarea}}</p>
              <a href="/project-get/{{this.id}}" class="btn btn-success">Edit</a>
              <a href="/project-delete/{{this.id}}" class="btn btn-danger">Delete</a>
            </div>
          </div>
        {{/each}}
      </div>
    </div>
    <script>
      function onClick() {
        let x = document.getElementById("burger");
        if (x.style.display === "block") {
          x.style.display = "none";
        } else {
